{
	"manifest_version": 2,
	"name": "BeOnTop Extension",
	"description": "Website checklist",
	"version": "0.0.8",
	"icons": {"128": "icon_128.png"},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"]
        }
    ],
	"permissions": ["storage", "activeTab"]
}